{
  "private": true,
  "workspaces":  [
    "packages/*"
  ],
  "devDependencies": {
    "@types/leaflet": "^1.7.3",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "depcheck": "^1.4.2",
    "typescript": "^4.1.2"
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "scripts": {
    "start:web": "yarn --cwd packages/web/ start",
    "build:web": "yarn --cwd packages/web/ build",
    "fix:lint": "eslint --cache --fix --ext ts,js,tsx src",
    "test:dependencies": "yarn depcheck --ignores=depcheck,typescript",
    "test:lint": "eslint --cache --ext ts,js,tsx src",
    "test:types": "yarn tsc"
  }
}
